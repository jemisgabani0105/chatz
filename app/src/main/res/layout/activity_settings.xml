<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Base.TextAppearance.AppCompat.Small"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffd900"
    tools:background="@color/colorPrimary"
    tools:context=".SettingsActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_image"
        android:layout_width="185dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:src="@drawable/ic_add_a_photo_black_24dp" />


    <TextView
        android:id="@+id/username"
        style="@style/Base.TextAppearance.AppCompat.Large.Inverse"
        android:layout_width="138dp"
        android:layout_height="34dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="240dp"
        android:layout_marginStart="127dp"
        android:text="Display Name"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/status"
        style="@style/Base.TextAppearance.AppCompat.Large.Inverse"
        android:layout_width="217dp"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="173dp"
        android:text="Hi there, I'm using Chatzz app ...!!"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/changeimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/changestatus"
        android:layout_marginStart="73dp"
        android:background="@color/col"
        android:text="CHANGE DP"
        android:textColor="@color/col"
        android:textStyle="bold"
        tools:background="@android:color/white" />

    <Button
        android:id="@+id/changestatus"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="102dp"
        android:layout_marginEnd="63dp"
        android:background="@color/col"
        android:text="UPDATE STATUS"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        tools:fontFamily="sans-serif" />
</RelativeLayout>